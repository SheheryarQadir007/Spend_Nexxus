<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true" android:color="@color/primary_color_pressed">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color_pressed"/> <!-- Primary color when pressed -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true" android:color="@color/primary_color_focused">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color_focused"/> <!-- Primary color when focused -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item android:color="@color/primary_color">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color"/> <!-- Default primary color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>

</selector>
