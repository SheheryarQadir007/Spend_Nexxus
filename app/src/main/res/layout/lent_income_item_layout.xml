<!-- lent_income_item_layout.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: $100"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/borrowerIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrower ID: ABC123"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/amountTextView"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/dueDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date: 2024-05-10"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/borrowerIdTextView"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

</RelativeLayout>
